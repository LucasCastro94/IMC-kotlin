<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="26dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



 <ImageView
     android:id="@+id/icon_height"
     android:layout_width="34dp"
     android:layout_height="34dp"
     android:src="@drawable/fita_icon"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:layout_marginTop="80dp"
     
  />

 <EditText
     android:id="@+id/input_height"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:hint="Informe sua Altura"
     android:gravity="center"
     app:layout_constraintLeft_toRightOf="@id/icon_height"
     app:layout_constraintTop_toTopOf="@id/icon_height"
     app:layout_constraintBottom_toBottomOf="@id/icon_height"
     app:layout_constraintRight_toRightOf="parent"
     android:fontFamily="sans-serif-light"
     android:inputType="numberDecimal"


     />


 <ImageView
     android:id="@+id/icon_weight"
     android:layout_width="34dp"
     android:layout_height="34dp"
     android:src="@drawable/weight_icon"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:layout_marginTop="160dp"
     />

 <EditText
     android:id="@+id/input_weight"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:hint="Informe seu Peso"
     android:gravity="center"
     app:layout_constraintLeft_toRightOf="@id/icon_weight"
     app:layout_constraintTop_toTopOf="@id/icon_weight"
     app:layout_constraintBottom_toBottomOf="@id/icon_weight"
     app:layout_constraintRight_toRightOf="parent"
     android:fontFamily="sans-serif-light"
     android:inputType="numberDecimal"

     />

 <com.google.android.material.button.MaterialButton
     android:id="@+id/button_sum"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Somar"
     app:layout_constraintTop_toBottomOf="@id/input_weight"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     android:layout_marginTop="80dp"
     app:cornerRadius="12dp"
     android:backgroundTint="@color/black"
  />





</androidx.constraintlayout.widget.ConstraintLayout>